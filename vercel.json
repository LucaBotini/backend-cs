{
  "version": 2,
  "builds": [{ "src": "api/server.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/preference", "dest": "/api/server.js" },
    { "src": "/sucesso", "dest": "/api/server.js" },
    { "src": "/falha", "dest": "/api/server.js" },
    { "src": "/pendente", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
